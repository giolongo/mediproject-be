{
  "info": {
    "name": "MediProject API",
    "description": "Complete API collection for MediProject backend with authentication and product management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', jsonData.access_token);",
                  "    pm.environment.set('accessToken', jsonData.access_token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            },
            "description": "Login with username and password to receive JWT token"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/product",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "product"
              ]
            },
            "description": "Get all products with details and files (no authentication required)"
          },
          "response": []
        },
        {
          "name": "Get Product by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/product/1",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "product",
                "1"
              ]
            },
            "description": "Get a single product by ID (no authentication required)"
          },
          "response": []
        },
        {
          "name": "Create Product",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{accessToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Sample Product\",\n  \"priority\": 1,\n  \"details\": [\n    {\n      \"label\": \"Description\",\n      \"description\": \"This is a sample product description\"\n    },\n    {\n      \"label\": \"Specifications\",\n      \"description\": \"Product specifications here\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/product",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "product"
              ]
            },
            "description": "Create a new product with details (requires authentication)"
          },
          "response": []
        },
        {
          "name": "Upload Files for Product",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{accessToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "files",
                  "type": "file",
                  "src": [],
                  "description": "Upload product images"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/product/1/files",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "product",
                "1",
                "files"
              ]
            },
            "description": "Upload files to an existing product (requires authentication). Use multipart/form-data."
          },
          "response": []
        },
        {
          "name": "Update Product (No Files)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{accessToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Product Name\",\n  \"priority\": 2,\n  \"details\": [\n    {\n      \"label\": \"Updated Description\",\n      \"description\": \"This is an updated product description\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/product/1",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "product",
                "1"
              ]
            },
            "description": "Update product without file uploads (requires authentication)"
          },
          "response": []
        }
      ]
    }
  ]
}